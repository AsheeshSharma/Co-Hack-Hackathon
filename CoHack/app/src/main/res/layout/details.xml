        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView12"
        android:layout_alignEnd="@+id/imageView12"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
