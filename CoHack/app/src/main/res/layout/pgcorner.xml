<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/imageView17"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/sd1"
        android:layout_marginRight="15dp"
        android:elevation="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/imageView18"
        android:background="@drawable/sd1"
        android:layout_below="@+id/imageView17"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:elevation="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/imageView19"
        android:background="@drawable/sd1"
        android:layout_below="@+id/imageView18"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignLeft="@+id/imageView18"
        android:layout_alignStart="@+id/imageView18"
        android:elevation="10dp"/>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/imageView20"
        android:background="@drawable/hh"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView19"
        android:layout_alignStart="@+id/imageView19"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One step for a Transformation"
        android:id="@+id/textView7"
        android:textColor="#29b6f6"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/imageView20"
        android:layout_toRightOf="@+id/imageView20"
        android:layout_toEndOf="@+id/imageView20" />
</RelativeLayout>